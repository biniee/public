	<script type="text/javascript">
		/*
		 * cookie
		 */
		var Cookie = {
			set: function(c_name, value, exdays) {
				var exdate = new Date();
				exdate.setDate(exdate.getDate() + exdays);
				var c_value = escape(value) + ((exdays == null) ? "" : "; expires=" + exdate.toUTCString());
				document.cookie=c_name + "=" + c_value;
			},
			get: function(c_name) {
				var i, x, y, ARRcookies = document.cookie.split(";");
				for (i = 0; i < ARRcookies.length; i++) {
					x = ARRcookies[i].substr(0, ARRcookies[i].indexOf("="));
					y = ARRcookies[i].substr(ARRcookies[i].indexOf("=") + 1);
					x = x.replace(/^\s+|\s+$/g, "");
					if (x == c_name) {
						return unescape(y);
					}
				}
			}
		};

		function showLiveLayer() {
			var url = '//videofarm.daum.net/controller/live/viewer/Live.html?pdDaumId=kiamotors_k7&width=640&height=360';

			$('.layer-launching').fadeIn(function () {
				$(this).addClass('active')
			}).find('iframe').attr({ src: url });
		}
		function AutoShowLiveLayer() {
			if (Cookie.get('m-popup') != undefined && Cookie.get('m-popup') == 'true') {
			} else {
				showLiveLayer();
			}
		}
		$(function() {
			$(function () {
				$('.btn-close').on('click', function () {
					$(this).closest('.layer').fadeOut().next('.dim').fadeOut();
					$(this).closest('.layer').find('iframe').attr('src', '');
					if ($('#check-popup').is(':checked')) {
						Cookie.set('m-popup', 'true', 1);
					}
					return false;
				});
			});
			//AutoShowLiveLayer();
			$('.videoPlay').on('click', function(e) {
				var url = $(this).data('url') + '?autoplay=1&showinfo=0&fs=0&rel=0&wmode=transparent',
					hash = $(this).data('name'),
					$wrap = $('<div><button type="button" class="btn-close"><span>close</span></button></div>').addClass('popup').appendTo('body'),
					scrollTop = $(window).scrollTop();

				$('html').addClass('show-popup');

				$wrap.append('<iframe src="" frameborder="0" allowfullscreen></iframe>')
					.find('iframe').attr({src:url});

				$wrap.on('click', '.btn-close', function() {
					$(this).closest('.popup').remove();
					$('html').removeClass('show-popup');

					$(window).scrollTop(scrollTop);
				});

				window.location.hash = hash;

				e.preventDefault();
			});
		});
	</script>
